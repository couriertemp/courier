<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<item>

    <shape android:shape="rectangle" >
        <stroke
            android:width="3px"
            android:color="@color/colorPrimary" />

        <corners android:radius="10dp" />

        <solid android:color="#00FFFFFF" />

        <padding
            android:bottom="5dp"
            android:left="5dp"
            android:right="5dp"
            android:top="5dp" />

    </shape>
</item>
</layer-list>